
@{
    ViewData["Title"] = "Create";
}

@model RecipeRating.Models.RecipeModel

<h2>Submit a Recipe</h2>

<form asp-action="Create">
    <!-- Add form fields for RecipeName, Ingredients, Method, etc. here -->
    <div class="form-group">
        <label asp-for="RecipeName">Recipe Name:</label>
        <input asp-for="RecipeName" type="text" required />
    </div>
    <div class="form-group">
        <label asp-for="Ingredients">Ingredients:</label>
        <input asp-for="Ingredients" type="text" required />
    </div>
    <div class="form-group">
        <label asp-for="Method">Method:</label>
        <input asp-for="Method" type="text" required />
    </div>
    <button type="submit">Submit</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
