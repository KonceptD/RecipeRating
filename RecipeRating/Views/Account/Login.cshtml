@model RecipeRating.Models.ViewModels.LoginViewModel
@{
}


<h2>Login</h2>
<!-- Login form for existing users -->
<form method="post" asp-action="Login">
    <!-- Email input -->
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" required class="form-control" autocomplete="email" />
    </div>
    <!-- Password input -->
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" required class="form-control" autocomplete="current-password" />
    </div>
    <!-- Remember me checkbox -->
    <div class="form-group">
        <input type="checkbox" asp-for="RememberMe" />
        <label asp-for="RememberMe">Remember Me</label>
    </div>
    <!-- Remember me checkbox -->
    <button type="submit" class="btn btn-primary">Login</button>
    <!-- Display validation summary -->
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
