@model RecipeRating.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" asp-controller="Account" method="post">
    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div class="form-group">
        <label asp-for="Username">Username:</label>
        <input asp-for="Username" type="text" required />
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" required />
    </div>
    <div>
        <label asp-for="ConfirmPassword">Confirm Password:</label>
        <input asp-for="ConfirmPassword" type="password" required />
    </div>
    <div>
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" type="text"  />
    </div>
    <div>
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" type="text"  />
    </div>
    <div>
        <label asp-for="SecretQuestion">Secret Question:</label>
        <input asp-for="SecretQuestion" type="text" />
    </div>
    <div>
        <label asp-for="SecretAnswer">Secret Answer:</label>
        <input asp-for="SecretAnswer" type="text" />
    </div>
    <!-- Add fields for FirstName, LastName, etc., if you have them -->
    <button type="submit">Register</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
